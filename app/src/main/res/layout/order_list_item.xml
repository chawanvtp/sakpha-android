<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            android:layout_width="110dp"
            android:layout_height="20dp" android:id="@+id/order_timestamp" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:layout_constraintStart_toEndOf="@+id/order_id"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="225dp"
            android:layout_height="19dp" android:id="@+id/order_id"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            android:layout_marginTop="5dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/order_timestamp"/>
    <TextView
            android:text="TextView"
            android:layout_width="252dp"
            android:layout_height="50dp"
            android:id="@+id/order_detail" android:layout_marginEnd="5dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/order_timestamp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="5dp"
            app:layout_constraintStart_toEndOf="@+id/order_status_btn" android:layout_marginStart="5dp"
            android:gravity="center"
            android:layout_marginTop="5dp" app:layout_constraintVertical_bias="0.115"/>
    <Button
            android:text="Button"
            android:layout_width="85dp"
            android:layout_height="49dp"
            android:textSize="10dp"
            android:id="@+id/order_status_btn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            app:layout_constraintEnd_toStartOf="@+id/order_detail" android:layout_marginEnd="5dp"
            app:layout_constraintTop_toBottomOf="@+id/order_id" android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.126"/>
    <TextView
            android:text="TextView"
            android:layout_width="136dp"
            android:layout_height="27dp"
            android:id="@+id/order_mobile"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/order_status_btn"
            app:layout_constraintEnd_toStartOf="@+id/order_email" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="234dp"
            android:layout_height="26dp"
            android:id="@+id/order_email" android:layout_marginTop="5dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/order_detail" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp" app:layout_constraintStart_toEndOf="@+id/order_mobile"
            android:layout_marginStart="5dp"/>
    <Spinner
            android:layout_width="485dp"
            android:layout_height="6dp"
            android:id="@+id/spinner3" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/order_mobile" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/common_google_signin_btn_text_dark_focused"/>


</android.support.constraint.ConstraintLayout>